body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #000;
    color: white;
    text-align: center;
}

#world-container {
    width: 100%;
    height: 100%;
    position: relative;
}

#world {
    width: 100%;
    height: 100%;
    background-color: black;
    transition: all 1s ease;
}

#market-cap-info {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.7);
    padding: 10px;
    border-radius: 10px;
}

let marketCap = 10000; // Initial market cap
const worldElement = document.getElementById("world");
const marketCapElement = document.getElementById("market-cap");

document.getElementById("increase-market-cap").addEventListener("click", () => {
    // Increase market cap by 25k
    marketCap += 25000;
    marketCapElement.textContent = marketCap;

    // Update the world based on the market cap
    updateWorld(marketCap);
});

function updateWorld(marketCap) {
    if (marketCap >= 25000) {
        worldElement.style.backgroundImage = 'url("assets/planet.png")'; // Big Bang - Planet appears
    } 
    if (marketCap >= 50000) {
        worldElement.style.backgroundImage = 'url("assets/sun.png")'; // Sun appears
        worldElement.style.backgroundSize = 'contain';
    } 
    if (marketCap >= 75000) {
        worldElement.style.backgroundImage = 'url("assets/grass.png")'; // Grass/Land appears
        worldElement.style.backgroundSize = 'cover';
    }
}


let marketCap = 10000; // Initial market cap
const worldElement = document.getElementById("world");
const marketCapElement = document.getElementById("market-cap");

document.getElementById("increase-market-cap").addEventListener("click", () => {
    // Increase market cap by 25k
    marketCap += 25000;
    marketCapElement.textContent = marketCap;

    // Update the world based on the market cap
    updateWorld(marketCap);
});

function updateWorld(marketCap) {
    if (marketCap >= 25000) {
        worldElement.style.backgroundImage = 'url("assets/planet.png")'; // Big Bang - Planet appears
    } 
    if (marketCap >= 50000) {
        worldElement.style.backgroundImage = 'url("assets/sun.png")'; // Sun appears
        worldElement.style.backgroundSize = 'contain';
    } 
    if (marketCap >= 75000) {
        worldElement.style.backgroundImage = 'url("assets/grass.png")'; // Grass/Land appears
        worldElement.style.backgroundSize = 'cover';
    }
}


fetch('https://api.coingecko.com/api/v3/coins/vidanova999')
    .then(response => response.json())
    .then(data => {
        marketCap = data.market_data.market_cap.usd;
        marketCapElement.textContent = marketCap;
        updateWorld(marketCap);
    });
